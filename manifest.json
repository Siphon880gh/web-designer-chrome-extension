{
    "name": "Design Tailwind Bootcamp Components into Inspect Element",
    "description": "Add tailwind and/or bootcamp components into Inspect Elements even if a webpage does not support tailwind. In the future, various components will be selectable.",
    "manifest_version": 3,
    "version": "1.0",
    "icons": {
        "16": "icon16x16.png",
        "32": "icon32x32.png",
        "48": "icon48x48.png",
        "128": "icon128x128.png"
    },
    "content_security_policy": {
        "extension_pages": "default-src 'self'; script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline'; img-src 'self' *;"
    },
    "permissions": [
        "activeTab",
        "tabs",
        "debugger",
        "scripting",
        "system.memory",
        "storage",
        "webNavigation",
        "webRequest"
      ],
    "host_permissions": [
        "<all_urls>",
        "http://*/*",
        "https://*/*"
    ],
    "action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content-enable-external-img.js"],
            "run_at": "document_start"
        },
        {
            "matches": ["<all_urls>"],
            "js": ["css-frameworks/bootstrap.bundle.min.js"]
        },
        {
            "matches": ["<all_urls>"],
            "css": ["css-frameworks/bootstrap.min.css", "css-frameworks/tailwind.min.css"]
        }
    ],
    "devtools_page": "devtools.html"
}